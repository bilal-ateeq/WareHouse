rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read and write to the products folder
    match /products/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write to any path (more permissive)
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}